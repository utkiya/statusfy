.hero
  img
    max-width 100%
    height auto
    max-height: 200px !important

.theme-default-content:not(.custom) img
  height: auto;

.page .content p img
  max-width 100%
  height auto
  overflow hidden
  border 1px solid #e1e4e8
  border-radius 5px

.sidebar
  background-color #fafbfc !important

.img-container
.text-center
  text-align: center

.btn
  color #fff
  border 1px solid #0366d6
  background-color #0366d6
  display inline-block
  padding .75rem 1.5rem
  line-height 1
  border-radius .25rem
  white-space nowrap
  font-size 1.125rem
  cursor pointer

  &:hover
    color #f6f8fa
    border-color #005cc5
    background-color #005cc5

.btn-sm
  padding .5rem 1rem
  font-size 1rem

.btn-outline
  color #005cc5
  border-color #005cc5
  border-width 2px
  background-color transparent
  opacity .75

  &:hover
    color #005cc5
    opacity 1
    background-color transparent

.sw-update-popup
  border none !important

  button
    @extend .btn
    margin-top .5em
    padding 0.2rem 1rem
    font-size 0.9rem

pre.statusfy-container
  border-left: .5rem solid $accentColor

  & > code
    font-size: 14px !important

    & > p
      margin: -5px 0 -20px 0

    code
      background-color: #808080 !important
      padding: 3px 5px
      border-radius: 3px
      color #fff

    em
      color #808080
      font-weight light

.last-updated
  display none
